<%- include("header") -%>

<div class="container">
    <div class="jumbotron jumbotron-fluid" style="text-align: center">
        <div class="container" style="text-align: center">
          <h1 class="display-4">Create Transaction</h1>
          <h2 class="lead">
            The charges are <b>$ <%= fee %></b> between <b><%= pickUpAddress %></b> and <b><%=
                dropOffAddress %></b> .
          </h2>
        </div>
      </div>

</div>

<div class="col-md-8 order-md-1">
    <h4 class="mb-3">Additional Details</h4>
    <form action="/createDelivery" class="form-signin" method="POST">
        <div class="row">
            
            <div class="mb-3">
                <label for="pickUpName">Pick Up Name <span class="text-muted">(required)</span></label>
                <input type="pickUpName"  class="form-control" 
                name="pickUpName" placeholder="Pick Up Name"  autofocus>
            </div>

            <div class="mb-3">
                <label for="pickUpPhoneNumber">Pick Up Phone Number <span class="text-muted">(required)</span></label>
                <input type="pickUpPhoneNumber"  class="form-control" 
                name="pickUpPhoneNumber" placeholder="Pick Up Phone Number"  autofocus>
            </div>

            <div class="mb-3">
                <label for="pickupBusinessName">Pickup Business Name <span class="text-muted">(Optional)</span></label>
                <input type="pickupBusinessName"  class="form-control" 
                name="pickupBusinessName" placeholder="Pickup Business Name"  autofocus>
            </div>

            
            <div class="mb-3">
                <label for="dropOffName">Dropoff Name <span class="text-muted">(required)</span></label>
                <input type="dropOffName"  class="form-control" 
                name="dropOffName" placeholder="Dropoff Name"  autofocus>
            </div>


            <div class="mb-3">
                <label for="dropoffPhoneNumber">Dropoff Phone Number <span class="text-muted">(required)</span></label>
                <input type="dropoffPhoneNumber"  class="form-control" 
                name="dropoffPhoneNumber" placeholder="Dropoff Phone Number"  autofocus>
            </div>

            
            <div class="mb-3">
                <label for="dropOffBusinessName">Dropoff Business Name <span class="text-muted">(Optional)</span></label>
                <input type="dropOffBusinessName"  class="form-control" 
                name="dropOffBusinessName" placeholder="Dropoff Business Name"  autofocus>
            </div>

        </div>

        <button class="btn btn-primary btn-lg btn-block" type="submit">Create Delivery</button> 
        

    </form>
    <form action="/" class="form-signin">
        <button class="btn btn-danger btn-lg btn-block" type="submit">Cancel</button>
    </form>
</div>



<%- include("footer") -%>
